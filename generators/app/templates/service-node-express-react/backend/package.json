{
    "name": "backend",
    "version": "0.0.1",
    "main": "dist/index.js",
    "scripts": {
        "build": "del ./dist && tsc && make-dir ./dist/res && cpy '**/*' '../../dist/res' --cwd=./src/res --parents",
        "build-and-lint": "npm run lint && npm run build",
        "dev": "ts-node ./node_modules/typeorm/cli.js migration:run && nodemon --watch 'src/**/*.ts' --watch 'src/res/**/*' --ignore 'src/**/*.spec.ts' --exec node -r ts-node/register --inspect=0.0.0.0:9229 src/index.ts",
        "lint": "eslint -c .eslintrc.js --ext .ts src",
        "lint:fix": "eslint -c .eslintrc.js --fix --ext .ts src",
        "migration:create": "cd src/database/migration && typeorm migration:create -n",
        "start": "typeorm migration:run && node dist/index.js"
    },
    "author": "",
    "devDependencies": {
        "@egodigital/tsconfig": "^4.0.0",
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.11",
        "@types/lodash": "^4.14.168",
        "@types/mongoose": "^5.10.4",
        "@types/node": "^14.14.37",
        "@types/pg": "^7.14.11",
        "@types/redis": "^2.8.28",
        "cpy-cli": "^3.1.1",
        "del-cli": "^3.0.1",
        "eslint": "^7.24.0",
        "eslint-config-ego": "^0.15.0",
        "make-dir-cli": "^2.0.0",
        "nodemon": "^2.0.7",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.4"
    },
    "dependencies": {
        "@egodigital/express-controllers": "^8.0.0",
        "@egodigital/types": "^1.2.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "is-stream": "^2.0.0",
        "lodash": "^4.17.21",
        "moment": "^2.29.1",
        "moment-timezone": "^0.5.33",
        "mongoose": "^5.12.3",
        "nocache": "^2.1.0",
        "pg": "^8.5.1",
        "redis": "^3.1.0",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.2.32",
        "winston": "^3.3.3"
    }
}